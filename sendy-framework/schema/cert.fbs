namespace Sendy;

struct ECPublicKey { bytes: [ubyte:32]; }

struct ECSignature { bytes: [ubyte:32]; }

struct RSAPublicKey { bytes: [ubyte:162]; }

struct UnsignedPeerCertificate {
    authentication: ECPublicKey;
    encryption: RSAPublicKey;
}

struct SignedPeerCertificate {
    cert: UnsignedPeerCertificate;
    signature: ECSignature;
}

attribute "bit_flags";
enum PeerCapabilities : uint16 {
    ResourceGossip = 1,
    Matchmaking = 2, 
}
